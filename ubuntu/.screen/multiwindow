## MultiWindow class
bind m eval 'command -c multiwindow' 'echo "MultiWindow Ops"'

# commands to layout Mumti Window
bind -c multiwindow 0 source $HOME/.screen/multiwin/2win-hori
bind -c multiwindow 1 source $HOME/.screen/multiwin/2win-vert
bind -c multiwindow 2 source $HOME/.screen/multiwin/4win
bind -c multiwindow 3 source $HOME/.screen/multiwin/3win-U1
bind -c multiwindow 4 source $HOME/.screen/multiwin/3win-D1
bind -c multiwindow 5 source $HOME/.screen/multiwin/3win-L1
bind -c multiwindow 6 source $HOME/.screen/multiwin/3win-R1

